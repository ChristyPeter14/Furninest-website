<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - FurniNest</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffe9c9;
        }
        /* Navbar Styling */
        .navbar {
            padding: 1rem;
            background-color: #d25620;
        }
        .navbar-brand {
            color: #ffffff;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .navbar-nav .nav-link {
            color: #ffffff;
            padding: 0.75rem 1rem;
        }
        .navbar-nav .nav-link:hover {
            color: #f7ca18;
           ;
        }

        /* Breadcrumb */
        .breadcrumb-container {
            background-color: #e9ecef;
            padding: 1rem;
        }

        /* Main Container Styling */
        .main-container {
            display: flex;
            margin-top: 2rem;
        }

        /* Side Navigation */
        .side-nav {
            width: 250px;
            height: 400px;
            padding: 1.5rem;
            background-color: #dab788;
            color: #ffffff;
            border-radius: 0.5rem;
        }
        .side-nav h5 {
            margin-bottom: 1.5rem;
            font-size: 1.25rem;
            color: #ffffff;
        }
        .side-nav .btn {
            display: block;
            width: 100%;
            margin-bottom: 0.75rem;
            text-align: left;
            color: #000000;
            background-color: #ffffff;
            border: none;
            padding: 0.75rem;
            border-radius: 0.25rem;
        }
        .side-nav .btn:hover {
            background-color: #007bff;
            color: #ffffff;
        }

        /* Profile Details */
        .profile-details {
            flex-grow: 1;
            padding: 1.5rem;
            background-color: #ffffff;
            border-radius: 0.5rem;
            margin-left: 1rem;
        }
        .profile-details h2 {
            margin-bottom: 1.5rem;
            font-size: 1.75rem;
            color: #343a40;
        }
        .profile-table th, .profile-table td {
            padding: 1rem;
            font-size: 1rem;
            color: #495057;
        }
        .profile-table th {
            background-color: #f8f9fa;
        }
        .profile-table td {
            background-color: #ffffff;
        }

        /* Footer */
        footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 1rem;
            text-align: center;
            margin-top: 2rem;
        }

    </style>



</head>
<body>

    <!-- Header (Navbar) -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">FurniNest</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/userProfile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/wishlist">Wishlist</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Wallet</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb-container">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container main-container">
        <!-- Side Navigation -->
        <div class="side-nav">
            <h5>Dashboard</h5>
            <button class="btn" ><a style="text-decoration: none;color: #000000;" href="/userAddress">Address</a></button>
            <a style="text-decoration: none;" href="/showOrder"><button class="btn">My Orders</button></a>
            <a style="text-decoration: none;" href="/userAccountDetails"> <button class="btn">Edit Account Details</button></a>
            <!-- <button class="btn">Edit Account Details</button> -->
            <button class="btn">Referral Code</button>
        </div>

        <!-- Profile Details Table -->
       
    <!-- Address Section -->
    <div class="profile-details">
        <h2>Your Addresses</h2>

        <!-- Address 1 -->
         <%for(i=0;i<locals.address.length;i++){%>
        <div class="address-section border p-3 mb-3">
            <h5>Address <%= i+1%></h5>
            <hr>
            <p><%=locals.address[i].fname%>  <%=locals.address[i].lname%>  </p>
            <p><%=locals.address[i].housename%> </p>
            <p><%=locals.address[i].city%>,<%=locals.address[i].state%>,<%=locals.address[i].country%> </p>
            <p><%=locals.address[i].pincode%> </p>
            <p> Phone: <%=locals.address[i].phone%> </p>
            <button class="btn btn-outline-primary "><a style="text-decoration: none;" href="/editAddress?addressId=<%=address[i]._id%>">Edit</a></button>
            <!-- <button class="btn btn-outline-danger"><a style="text-decoration: none;" href="/deleteAddress?addressId=<%=address[i]._id%>">Delete</a></button> -->
            <button class="btn btn-outline-danger delete-btn" data-id="<%= locals.address[i]._id %>">Delete</button>
        </div>
        <%}%>

       

         
        <button class="btn btn-primary"><a style="text-decoration: none;color: #f4f4f9;" href="/addAddressForm">Add New Address</a></button>
    </div>
    </div>
    <%-include("../../views/partials/user/footer")%>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Select all delete buttons and add click event for SweetAlert confirmation
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault();
                const addressId = this.getAttribute('data-id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you want to delete this address?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/deleteAddress?addressId=${addressId}`;
                    }
                });
            });
        });
    </script>
</body>
</html>
